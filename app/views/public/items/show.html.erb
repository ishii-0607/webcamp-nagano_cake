<div class="container">
  <div class="row">

      <div class="col-md-4">
        <p><%= attachment_image_tag @item, :image, size: "300x200" %>
      </div>
    <%= form_with model: @cart_item_new, url: cart_items_path, method: :post, local:true do |f| %>
      <div class="col-md-8">
        <p><%= @item.name %></p>
        <p><%= @item.introduction %></p>
        <font>￥<%= (@item.price * 1.1).floor %>(税込)</font>
      </div>
      <div>
        <%= f.hidden_field :item_id, value: @item.id  %>
        <%= f.select :amount, *[1..10], include_blank: '個数選択' %>
        <%= f.submit "カートに入れる", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
