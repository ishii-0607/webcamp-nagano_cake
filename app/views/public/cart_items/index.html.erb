<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="page-tatle">ショッピングカート</h3>
      <%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete, class: "btn btn-danger float-right mt-4" %>
      <table class="table table-bordered">
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, size: "100x50" %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.with_tax_price %>
            </td>
            <td>
              <%= form_with model: cart_item, local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
            </td>
            <% @total_money +=  cart_item.subtotal %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-3 offset-md-3">
      <table class="table table-bordered">
        <tr class="text-right">
          <th class="table-secondary col-2">合計金額</th>
          <td class="col-2"><%= @total_money %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= link_to "情報入力に進む", new_orde_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
