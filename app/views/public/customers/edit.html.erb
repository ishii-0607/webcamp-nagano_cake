<div class="container">
  <h3 class="page-tatle">会員情報編集</h3>
  <div class="row">
    <div class="col-12">
      <%= form_with model: @customer, url: customers_path, method: :patch, local:true do |f| %>
        <div class="field row">
          <%= f.label "名前", class: "col-lg-2" %>
          <%= f.text_field :first_name, autofocus: true, class: "mr-5" %>
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <p></p>
        <div class="field row">
          <%= f.label "フリガナ", class: "col-lg-2" %>
          <%= f.text_field :first_name_kana, class: "mr-5" %>
          <%= f.text_field :last_name_kana %>
        </div>
        <P></P>
        <div class="field row">
          <%= f.label "郵便番号", class: "col-lg-2" %>
          <%= f.text_field :postal_code %>
        </div>
        <p></p>
        <div class="field row">
          <%= f.label "住所", class: "col-lg-2" %>
          <%= f.text_field :address, class: "col-4" %>
        </div>
        <p></p>
        <div class="field row">
          <%= f.label "電話番号", class: "col-lg-2" %>
          <%= f.text_field :telephone_number %>
        </div>
        <p></p>
        <div class="field row">
          <%= f.label "メールアドレス", class: "col-lg-2" %>
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
        <p></p>
        <div class="actions row">
          <div class="col-lg-2"></div>
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          <div class="col-2"></div>
          <%= link_to "退会する", confirm_withdraw_path, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
