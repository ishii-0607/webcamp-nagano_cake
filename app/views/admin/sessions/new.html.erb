<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-tatle">管理者ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field row">
          <div class="col-lg-2"></div>
          <%= f.label :メールアドレス, class: "col-lg-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-6" %>
        </div>
        <p></p>
         <div class="field row">
          <div class="col-lg-2"></div>
          <%= f.label :パスワード, class: "col-lg-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-6" %>
        </div>
        <p></p>
        <div class="actions row">
          <%= f.submit "ログイン", class: "btn btn-primary mx-auto" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
