<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table class="table">
       <h3>ジャンル一覧・追加</h3>
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
        <% end %>
        <tbody>
        <h4>ジャンル</h4>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <p><%= genre.name %></p>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
