<div class="container">
  <h3 class="page-tatle">ジャンル一覧・追加</h3>
  <div class="row">
    <div class="col-12">

        <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
        <div class="row">
          <div class="col-12">
            <%= f.label :ジャンル名, class: "col-2" %>
            <%= f.text_field :name, class: "col-5" %>
            <%= f.submit '新規登録', class: "btn btn-success ml-5" %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
    <div class="row">
      <div class="col-5">
        <p class="mt-5"></p>
        <table class="table">
          <thead class="table table-secondary">
            <tr>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <p><%= genre.name %></p>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
