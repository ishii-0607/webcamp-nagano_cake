<div class="container">
  <div class="row">
      <h3>商品詳細</h3>
      <div class="col-md-4">
        <p><%= attachment_image_tag @item, :image, size: "300x200" %>
      </div>
      <div class="col-md-8">
        <p>商品名 <%= @item.name %></p>
        <p>商品説明 <%= @item.introduction %></p>
        <p>ジャンル <%= @item.genre_id %></p>
        <p>税込価格 <%= @item.price %></p>
        <p>販売ステータス</p>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
  </div>
</div>
