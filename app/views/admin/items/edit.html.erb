<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h3>商品編集</h3>
      <%= form_with model: @item, url: admin_item_path, method: :patch, local:true do |f| %>
      <div>
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
      </div>
      <div>
        <%= f.label :商品名 %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction %>
      </div>
      <div>
        <%= f.label :ジャンル　%>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--' %>
      </div>
      <div>
        <%= f.label :税抜価格 %>
        <%= f.text_field :price %>円
      </div>
      <div>
         <%= f.label :販売ステータス　%>
      </div>
      <div>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
