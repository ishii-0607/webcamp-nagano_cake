<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table class="table">
        <h3>会員一覧</h3>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <p class="text-dark"><%= customer.first_name %><%= customer.last_name %></p>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
            <% if customer.is_active == true %>
              <font class="text-success">有効</font>
            <% else %>
              <p>退会</p>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
