<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="page-tatle">注文履歴一覧</h3>
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @ordes.each do |orde| %>
          <tr>
            <td>
              <%= link_to admin_orde_path(orde.id) do %>
                <%= orde.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </td>
            <td><%= orde.name %></td>
            <td><%= orde.orders_details.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @ordes %>
